<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ParentDashboardActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parent_dashboard_title"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/buttonAddChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_child_button_text"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonViewChildren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_children_button_text"
        android:layout_marginBottom="16dp"/>

    <!-- Removed generic map button, map is now accessed per child from ViewChildrenActivity -->
